{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "@shared/components": ["./app/shared/components"],
      "@shared/components/*": ["./app/shared/components/*"],
      "@shared/models": ["./app/shared/models"],
      "@shared/models/*": ["./app/shared/models/*"],
      "@shared/services": ["./app/shared/services/"],
      "@shared/services/*": ["./app/shared/services/*"]
    }
  }
}
